<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    <style name="check_repeat">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_check_repeat</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@drawable/selector_color_check_repeat</item>
    </style>

    <style name="styleContentText">
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="styleNormalButton">
        <item name="android:background">@drawable/selector_normal_button</item>
        <item name="android:textColor">@drawable/selector_color_normal_button</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
